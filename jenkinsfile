pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
                echo 'This is a successful method'
            }
        }
        
        stage('Checkout from scm'){
            steps{
                checkout([$class: 'GitSCM', branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[credentialsId: 'github', url: 'https://github.com/Osiephri/CICDWITHCompose']]])
            }
        }
        
        stage('Build image'){
            steps{
                script{
                    bat 'docker build -t scinet0786/kompose:latest .'
                }
            }
        }
        
        stage('push image to hub'){
            steps{
                bat 'docker login -u scinet0786 -p *bay0mi12'
                bat  "docker push 'scinet0786/kompose:latest'"
                echo "This command"
            }
        }
        
        stage('deploy to EKS cluster'){
            steps{
                echo 'kubectl'
            }
        }
}
}  
