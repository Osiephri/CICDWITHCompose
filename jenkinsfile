pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
                echo 'This is a success'
            }
        }
        
        stage('Checkout from scm'){
            steps{
                checkout([$class: 'GitSCM', branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[credentialsId: 'github', url: 'https://github.com/Osiephri/CICDWITHCompose']]])
            }
        }
        
        stage('Build image'){
            steps{
                script{
                    sh 'docker build -t scinet0786/kompose:latest .'
                }
            }
        }
        
        stage('push image to hub'){
            steps{
                sh 'docker login -u scinet0786 -p *bay0mi12'
                sh  "docker push 'scinet0786/kompose:latest'"
            }
        }
        
        stage('deploy to Eks cluster'){
            steps{
                withKubeConfig(caCertificate: '', clusterName: '', contextName: '', credentialsId: 'kubernetes', namespace: '', serverUrl: '') {
                    sh kubectl apply -f ./DeploymentFile/KubernetesDeployment.yaml
}
            }
        }
}
}  